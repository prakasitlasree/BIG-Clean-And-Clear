        function SendEmail() {


            let fileData = new FormData();

            var NAME = $('#name').val()
            var TEL = $('#tel').val()
            var EMAIL = $('#email').val()
            var MESSAGE = $('#message').val()

            fileData.append('NAME', NAME);
            fileData.append('TEL', TEL);
            fileData.append('EMAIL', EMAIL);
            fileData.append('MESSAGE', MESSAGE);

            if (NAME != "" && TEL != "" && MESSAGE != "") {
                $.LoadingOverlay("show");
                $.ajax({
                    type: "POST",
                    url: "/email/sendmail",
                    dataType: "json",
                    contentType: false,
                    processData: false,
                    data: fileData,
                    success: function (result, status, xhr) {
                        if (result.STATUS) {
                            alert("ส่งอีเมลล์สำเร็จ");
                            $.LoadingOverlay("hide");
                            $('#name').val("")
                            $('#tel').val("")
                            $('#email').val("")
                            $('#message').val("")
                        }
                        else {
                            alert("เกิดข้อผิดพลาด")
                            $.LoadingOverlay("hide");
                        }
                    }
                })
            }
            else {
                alert("กรุณากรอกข้อมูล ชื่อ-นามสกุล เบอร์โทร และหัวข้อ")
